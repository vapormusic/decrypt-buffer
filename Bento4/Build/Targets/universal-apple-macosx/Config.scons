LoadTool('gcc-generic', env)

### Special for the MAC: universal flags
universal_flags = ' -arch ppc -arch i386 -isysroot /Developer/SDKs/MacOSX10.4u.sdk -mmacosx-version-min=10.4'

env['CCFLAGS']          += universal_flags + ' -fno-common' 
env['CXXFLAGS']         += universal_flags
env['LINKFLAGS']        += universal_flags
env['FRAMEWORKSFLAGS']   = universal_flags + ' -flat_namespace -undefined suppress'  

